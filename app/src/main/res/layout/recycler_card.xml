<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arek.swdahp.ScoresActivity">


    <android.support.v7.widget.CardView
        android:background="@color/deppPurple"
        android:id="@+id/cardRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <android.support.v7.widget.CardView
                android:paddingRight="8dp"
                android:id="@+id/rank_and_image_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/rank_text_view"
                    android:text="90/100"
                    android:textSize="26sp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:id="@+id/example_car_icon"
                    android:paddingTop="16dp"
                    android:scaleType="fitXY"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_below="@id/rank_text_view"
                    android:layout_marginTop="32dp"
                    android:layout_marginRight="16dp"

                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:background="@color/deppPurple"
                android:layout_marginLeft="8dp"
                android:id="@+id/specification_card_view"
                android:layout_toRightOf="@id/rank_and_image_card_view"
                android:layout_width="match_parent"
                android:layout_height="148dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/model_name"
                        android:text="Model:"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/horse_power"
                        android:layout_below="@id/model_name"
                        android:text="Moc: "
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_below="@id/horse_power"
                        android:id="@+id/safety_level"
                        android:text="BezpieczeÅ„stwo:"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/cost_level"
                        android:layout_below="@id/safety_level"
                        android:text="Cena:"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/year_production"
                        android:layout_below="@id/cost_level"
                        android:text="Rok produkcji:"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/kilometers_done"
                        android:layout_below="@id/year_production"
                        android:text="Przebieg:"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/comfort_level"
                        android:layout_below="@id/kilometers_done"
                        android:text="Poziom komfortu: "
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


            </android.support.v7.widget.CardView>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
