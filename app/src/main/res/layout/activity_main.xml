<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.arek.swdahp.MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_gravity="center_horizontal"
        android:id="@+id/car_icon"
        android:src="@drawable/car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/company_spinner"
        android:hint="Marka"
        android:padding="4dp"
        android:paddingLeft="8dp"
        app:met_floatingLabel="normal"
        android:layout_width="match_parent"
        android:textColorHint="@color/colorGrey"
        android:layout_height="wrap_content" />

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/engine_power_spinner"
        android:padding="4dp"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Moc silnika"
        app:met_floatingLabel="normal"
        android:textColorHint="@color/colorGrey"/>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/value_textView"
        android:padding="8dp"
        android:paddingLeft="12dp"
        android:text="Cena:"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
    android:id="@+id/minValue"
    android:hint="min (zł)"
    android:textColorHint="@color/colorGrey"
    android:padding="8dp"
    android:layout_below="@id/value_textView"
    android:layout_width="88dp"
    android:layout_height="wrap_content"
    />

    <EditText
        android:id="@+id/maxValue"
        android:hint="max (zł)"
        android:textColorHint="@color/colorGrey"
        android:padding="8dp"
        android:layout_below="@id/value_textView"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/minValue" />
</RelativeLayout>


    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/door_amount_spinner"
        android:hint="Liczba drzwi"
        android:textColorHint="@color/colorGrey"
        android:padding="4dp"
        android:paddingLeft="8dp"
        app:met_floatingLabel="normal"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="16dp"
        android:text="Bezpieczeństwo pojazdu"
        android:textSize="16sp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/safety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingTop="16dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/seek_bar_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:id="@+id/safety_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/search"
        android:paddingTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_search"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"/>


</LinearLayout>
